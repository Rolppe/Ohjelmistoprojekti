<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/enterTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_alignParentTop="true"
        android:inputType="text"
        android:hint="@string/edtTitle"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dialogTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="@string/edtTvTitle"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dialogTvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enterFrom"
        android:layout_marginTop="34dp"
        android:text="@string/edtTvFrom"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dialogTvTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enterFrom"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="320dp"
        android:text="@string/edtTvTo"
        android:textSize="24sp" />

    <TimePicker
        android:id="@+id/enterFrom"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/enterTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:inputType="time"
        android:timePickerMode="spinner" />

    <TimePicker
        android:id="@+id/enterTo"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/enterFrom"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:inputType="time"
        android:timePickerMode="spinner" />


</RelativeLayout>